# Environment Variables Example (do not commit real secrets)
# Copy to .env locally; set same keys in Railway for production

# MongoDB Connection
# Example (Atlas):
# MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/rectify?retryWrites=true&w=majority
# Example (Railway internal Mongo):
# MONGODB_URI=mongodb://<user>:<pass>@mongodb.railway.internal:27017/rectify
MONGODB_URI=

# MongoDB Atlas API credentials for automatic IP management (optional)
# Get these from: Atlas → Access Manager → API Keys
# Required permissions: Project Owner or Project Data Access Admin
MONGODB_ATLAS_PROJECT_ID=
MONGODB_ATLAS_PUBLIC_KEY=
MONGODB_ATLAS_PRIVATE_KEY=

# JWT Secret
JWT_SECRET=

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email configuration for password reset (NEW FEATURE)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@rectify.ae


# Development email testing (Ethereal)
ETHEREAL_USER=ethereal.user@ethereal.email
ETHEREAL_PASS=ethereal.pass

# Blockchain Configuration
# Network: localhost, sepolia, mainnet, goerli
BLOCKCHAIN_NETWORK=localhost

# Infura Configuration (for Ethereum mainnet/testnet)
INFURA_API_KEY=your_infura_api_key_here
INFURA_API_KEY_SECRET=your_infura_project_secret_here

# Local Blockchain Configuration (for development)
LOCAL_BLOCKCHAIN_URL=http://localhost:8545

# Wallet Configuration (optional - for automated transactions)
# WARNING: Never commit private keys to version control
# BLOCKCHAIN_PRIVATE_KEY=your_private_key_here

# Transaction Configuration
BLOCKCHAIN_GAS_LIMIT=100000
BLOCKCHAIN_CONFIRMATION_TIMEOUT=300000
